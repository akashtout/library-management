<div class="login"><br>
  <div class="container">
    <div class="form">
      <h2><strong>Please fill Details</strong></h2>
      <%= form_for(@librarian) do |f| %>
      <%= label_tag 'Name'%><br>         
      <%= f.text_field :name, :placeholder => "name" %><br>
      <%= label_tag 'Email'%><br>
      <%= f.email_field :email, :placeholder => "Email" %><br>
      <%= label_tag 'Password'%><br>
      <%= f.password_field :password, :placeholder => "Password" %><br>
      <%= f.hidden_field :usertype, value: 'Student' %>
      <%= f.submit "Submit", class: "btn-submit" %>
      <% end %><br>
      <%= link_to 'Back to Home',librarianhome_path,class:"btn btn-outline-dark"%>
    </div>
  </div>
</div>