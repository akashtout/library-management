<%if current_librarian %>
<h1 class="text-center text-success"><strong>Welcome to the library</strong></h1>
<%if check_student%>
<h1  class="text-primary">Student Details</h1>
<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Usertype</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= current_librarian.name %></td>
      <td><%= current_librarian.email %></td>
      <td><%= current_librarian.usertype %></td>
    </tr>
  </tbody>
</table>
<li> <%= link_to 'Available Books',studentindex_path, class:"btn btn-outline-success"%></li><br>
<li> <%= link_to 'Borrowed Books',borrowbook_path , class:"btn btn-outline-success"%></li><br>
<li> <%= link_to 'Requested Books',requestedbook_path, class:"btn btn-outline-success"%></li><br>
<% elsif  check_librarian%>
<div class="form-group">  
  <%= form_with  url: search_path, method: :get do |f| %>
  <%= f.collection_select :search, Librarian.all, :name, :name, multiple: true, class: "select" %>
  <%= f.submit "Search" %>   
  <%end%>
</div>

<h1 class="text-primary">Librarian Details</h1>
<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Usertype</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td> <%= current_librarian.name %> </td>
      <td> <%= current_librarian.email %> </td>
      <td> <%= current_librarian.usertype %> </td>
    </tr>
  </tbody>
</table>
<li> <%= link_to 'View Requested Book', borrowshow_path, class:"btn btn-outline-success" %></li><br>
<li> <%= link_to 'All Books', books_path, class:"btn btn-outline-success"%></li><br>
<li> <%= link_to 'not return by Student', student_history_path, class:"btn btn-outline-success" %></li><br>
<li> <%= link_to "View Return Book ", returnb_path,class:"btn btn-outline-success",data:{'toggle' => "modal", 'target' =>"#myModal",remote:true}%></li><br>
<li> <%= link_to "Add new book", new_book_path,class:"btn btn-outline-success",data:{'toggle' => "modal", 'target' =>"#myModal", remote:true}%></li><br>
<li><%= link_to "Overdue Date Book", overdue_date_book_path, class: "btn btn-outline-success" %></li><br>
<li> <%= link_to 'All Users', index_path, class:"btn btn-outline-success"%></li><br>
<li> <%= link_to 'insert data', books_insert_data_path, class:"btn btn-outline-success" ,data:{'toggle' => "modal", 'target' =>"#myModal",remote:true}%></li><br>
<% else %>
<h1>Please Select Role</h1>
<li> <%= link_to 'Select Identity', edit_librarian_registration_path, class:"btn btn-outline-success"%></li><br>
<% end %>
<% end %>

