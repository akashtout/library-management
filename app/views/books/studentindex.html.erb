<%if current_librarian%>
<h1 class="text-success">Availabe Books</h1>
<table class="table table-bordered">
  <thead  class="thead-dark">
  <tr>
    <th>Id No.</th>
    <th>Title</th>
    <th>Price</th>
    <th>Description</th>
    <th>Author</th>
    <th>View</th>
    <th>Request Book</th>
  </tr>
  </thead>
<tbody  id="request">
<% @books.each do |book| %>  
<tr>
   <td><%= link_to book.id%></td>
   <td><%= link_to book.title %></td>
   <td><%= link_to book.price%></td>
   <td><%= link_to book.description%></td>    
   <td><%= link_to book.author_name%></td>
   <td><%= link_to  'View', book_path(book) ,class:"btn btn-outline-info"%></td>
   <td> 
     <%= form_tag borrowcreate_path, method: :post , remote: true do %>
     <%= hidden_field_tag :book_id, book.id %>
     <%= submit_tag "Request Book",:class => "btn btn btn-sm ",class:"btn btn-outline-success" %>
      <% end %>
   </td>
 </tr>
<% end%>
</tbody>
</table>
 <%= link_to 'Back to Home',libraryl_path,class:"btn btn-outline-dark" %> 
<%end%>