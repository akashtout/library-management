<%if current_librarian%>
<h1 class="text-success">Availabe Books</h1>
<table class="table table-bordered">
  <thead  class="thead-dark">
  <tr>
    <th>Id No.</th>
    <th>Title</th>
    <th>Price</th>
    <th>Description</th>
    <th>Author</th>
    <th>View</th>
    <th>Request Book</th>
  </tr>
  </thead>
<tbody>
<% @books.each do |book| %>  
<tr>
   <td><%= link_to book.id%></td>
   <td><%= link_to book.title %></td>
   <td><%= link_to book.price%></td>
   <td><%= link_to book.description%></td>    
   <td><%= link_to book.author_name%></td>
   <td><%= link_to  'View', book_path(book) %></td>
   <td> 
     <%= form_tag borrowcreate_path, method: :post do %>
     <%= hidden_field_tag :book_id, book.id %>
     <%= submit_tag "Request Book",:class => "btn btn btn-sm " %>
      <% end %>
   </td>
 </tr>
<% end%>
</tbody>
</table>
<button type="button" class="btn btn-dark"> <%= link_to 'Back to Home',libraryl_path%></button>
<%end%>