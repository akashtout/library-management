<%if current_librarian %>
  <h1  class="text-success"><strong>Details Of Book</strong></h1>
  <table class="table table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>Title</th>
        <th>Price</th>
        <th>Description</th>
        <th>Author name</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @book.title %></td>
        <td><%= @book.price %></td>
        <td><%= @book.description %></td>
        <td><%= @book.author_name %></td>
      </tr>
    </tbody>
  </table>
  <%= link_to 'Back to Home',home_page_path,class:"btn btn-dark"%>
<% end %>
