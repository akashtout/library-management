<%if current_librarian%>
  
<div class="pull-right">
<form action="<%= books_path %>">
  <input type="text" placeholder="    Search here" name="search_key">
  <button type="submit">Search</button>
</form>
</div>

<h1 class="text-success">Availabe Books</h1>
<table class="table table-bordered">
  <thead  class="thead-dark">
  <tr>
    <th>Id No.</th>
    <th>Title</th>
    <th>Price</th>
    <th>Description</th>
    <th>Author Name</th>
    <th>View</th>
    <th>Edit</th>
    <th>Remove</th>
  </tr>
  </thead>
<tbody>
<% @books.each do |books| %>  
<tr>
   <td><%= link_to books.id%></td>
   <td><%= link_to books.title %></td>
   <td><%= link_to books.price%></td>
   <td><%= link_to books.description%></td>    
   <td><%= link_to books.author_name%></td>
   <td><%= link_to  'View', book_path(books) %></td>
   <td><%= link_to  'Edit', edit_book_path(books) %></td>
   <td><%= link_to  'Remove', des_path(books), method: :delete, data: {confirm: "Are you sure"} %></td>
</tr>
<% end%>
</tbody>
</table>
<button type="button" class="btn btn-dark"> <%= link_to 'Back to Home',libraryl_path%></button>
<%end%>
