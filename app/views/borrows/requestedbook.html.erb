 <%if current_librarian%>
 <h1 class="text-primary">Requested Books</h1>
<table class="table table-bordered">
 <thead class="thead-dark">
   <tr>
   	 <th> Student Id </th>
     <th> book Id </th>
     <th> Date </th>
      <th>Cancel Request </th>
  </tr>
 </thead>
 <tbody>
 	  <% @requestedbook.each do |rb| %>
  <tr>
     <td><%= rb.librarian_id%></td>
     <td><%= rb.book_id%></td>
 	   <td><%=rb.created_at.to_date%></td>
     <td><%= link_to "Cancel ", borrow_path(rb.id), method: :delete %></td>
  </tr>
       <% end %>
 </tbody>
</table>
<button type="button" class="btn btn-dark"> <%= link_to 'Back',libraryl_path%></button>
<%end%>