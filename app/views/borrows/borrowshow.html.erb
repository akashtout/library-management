 <%if current_librarian%>
<h1  class="text-success"><strong>Details Of request book from Student</strong></h1>
<table class="table table-bordered">
 <thead class="thead-dark">
  <tr>
    <th>Student Id</th>
    <th>book_id</th>
    <th>Student Name</th>
    <th>Accept Request</th>
    <th>Reject Request</th>
  </tr>
  </thead>
<tbody>

   <% @borrowshow.each do |borrowshow| %>
   <tr>
     <td><%= borrowshow.librarian_id %></td>
     <td><%= borrowshow.book_id %></td>
     <td><%= borrowshow.student %></td>
     <td><%= link_to "Accept", accept_path(borrowshow),method: :put %></td>
      <td><%= link_to "Reject", reject_path(borrowshow.id),method: :delete %></td>

   </tr>
   <%end%>
</tbody>
</table>
<button type="button" class="btn btn-dark"> <%= link_to 'Back to Home',libraryl_path%></button>
<%end%>




 